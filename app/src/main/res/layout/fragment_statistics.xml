<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_logo_main"/>
            </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/card_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_blue_container"
                    android:background="@drawable/shape_card_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:text="May, 2022"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="@color/light_blue_sky"
                    app:layout_constraintBottom_toTopOf="@+id/text_income"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/card_container"
                    tools:text="May, 2022" />

                <TextView
                    android:id="@+id/text_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="2040.00 DH"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/text_spending_percentage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_date"
                    tools:text="2040.00 DH" />

                <TextView
                    android:id="@+id/text_spending_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:text="you spend 50% of your income"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="@color/blue_sky"
                    app:layout_constraintBottom_toTopOf="@+id/card_net_income"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_income"
                    tools:text="you spend 50% of your income"

                    />


                <View
                    android:id="@+id/card_net_income"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_statistics_card"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:background="@drawable/shape_card"
                    app:layout_constraintBottom_toTopOf="@+id/card_chart"
                    app:layout_constraintEnd_toStartOf="@id/card_expenditure"
                    app:layout_constraintStart_toStartOf="@id/card_container"
                    app:layout_constraintTop_toBottomOf="@+id/text_spending_percentage" />

                <TextView
                    android:id="@+id/title_net_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="@string/net_income"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    android:textColor="@color/color_primary_70"
                    app:layout_constraintStart_toStartOf="@+id/card_net_income"
                    app:layout_constraintTop_toTopOf="@+id/card_net_income" />

                <TextView
                    android:id="@+id/text_net_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:text="2000.00 DH"

                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorPrimaryDark"
                    app:layout_constraintStart_toStartOf="@+id/card_net_income"
                    app:layout_constraintTop_toBottomOf="@+id/title_net_income" />

                <TextView
                    android:id="@+id/text_diff_net_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:text="+15%"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    android:textColor="@color/cerulean"
                    app:layout_constraintBottom_toBottomOf="@+id/card_net_income"
                    app:layout_constraintEnd_toEndOf="@+id/card_net_income"
                    app:layout_constraintStart_toEndOf="@+id/text_net_income" />

                <ImageView
                    android:id="@+id/image_arrow_circle_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_8dp"
                    android:src="@drawable/ic_arrowcircle_down"
                    app:layout_constraintEnd_toEndOf="@+id/card_net_income"
                    app:layout_constraintTop_toTopOf="@+id/card_net_income" />


                <View
                    android:id="@+id/card_expenditure"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_statistics_card"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:background="@drawable/shape_card"
                    app:layout_constraintBottom_toBottomOf="@+id/card_net_income"
                    app:layout_constraintEnd_toEndOf="@id/card_container"
                    app:layout_constraintStart_toEndOf="@id/card_net_income"
                    app:layout_constraintTop_toTopOf="@+id/card_net_income" />

                <TextView
                    android:id="@+id/title_expenditure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="@string/expenditure"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    android:textColor="@color/color_primary_70"
                    app:layout_constraintStart_toStartOf="@+id/card_expenditure"
                    app:layout_constraintTop_toTopOf="@+id/card_expenditure" />

                <TextView
                    android:id="@+id/text_expenditure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:text="2000.00 DH"

                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorPrimaryDark"
                    app:layout_constraintStart_toStartOf="@+id/card_expenditure"
                    app:layout_constraintTop_toBottomOf="@+id/title_expenditure" />

                <TextView
                    android:id="@+id/text_diff_expenditure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:text="+15%"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    android:textColor="@color/sunrise_orange"
                    app:layout_constraintBottom_toBottomOf="@+id/card_expenditure"
                    app:layout_constraintEnd_toEndOf="@+id/card_expenditure"
                    app:layout_constraintStart_toEndOf="@+id/text_expenditure" />

                <ImageView
                    android:id="@+id/image_arrow_circle_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_8dp"
                    android:src="@drawable/ic_arrowcircle_up"
                    app:layout_constraintEnd_toEndOf="@+id/card_expenditure"
                    app:layout_constraintTop_toTopOf="@+id/card_expenditure" />

                <View
                    android:id="@+id/card_chart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_chart_card"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:background="@drawable/shape_card_chart"
                    app:layout_constraintBottom_toBottomOf="@+id/card_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_container" />

                <TextView
                    android:id="@+id/text_chart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:text="@string/title_chart_expenditure_dh"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/color_primary_70"
                    app:layout_constraintBottom_toTopOf="@+id/chart"
                    app:layout_constraintStart_toStartOf="@+id/card_chart"
                    app:layout_constraintTop_toTopOf="@+id/card_chart" />

                <ImageView
                    android:id="@+id/image_arrow_circle"
                    android:layout_width="@dimen/size_icon_chart"
                    android:layout_height="@dimen/size_icon_chart"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:src="@drawable/ic_arrowcircle_up"
                    app:layout_constraintBottom_toBottomOf="@+id/text_chart_title"
                    app:layout_constraintStart_toEndOf="@+id/text_chart_title"
                    app:layout_constraintTop_toTopOf="@+id/text_chart_title" />

                <Button
                    android:id="@+id/button_switch"
                    android:layout_width="@dimen/size_icon_chart"
                    android:layout_height="@dimen/size_icon_chart"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:background="@drawable/ic_switch_left"
                    app:layout_constraintBottom_toBottomOf="@+id/text_chart_title"
                    app:layout_constraintEnd_toEndOf="@+id/card_chart"
                    app:layout_constraintTop_toTopOf="@+id/text_chart_title" />

                <com.example.android.clinicmanagement.barChart.RoundedBarChart
                    android:id="@+id/chart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:layout_marginEnd="@dimen/margin_8dp"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/card_chart"
                    app:layout_constraintEnd_toEndOf="@+id/card_chart"
                    app:layout_constraintStart_toStartOf="@+id/card_chart"
                    app:layout_constraintTop_toBottomOf="@+id/text_chart_title" />

                <TextView
                    android:id="@+id/text_expenditure_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expenditures_by_categories"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginStart="@dimen/margin_16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chart" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_expenditure"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingStart="@dimen/padding_16dp"
                    android:clipToPadding="false"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:layout_constraintTop_toBottomOf="@id/text_expenditure_title"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </FrameLayout>
</layout>